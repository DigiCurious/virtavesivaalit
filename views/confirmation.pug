block content
    script.
      $(document).ready(function(){
        $('select#teesi1').change(function(){
            var selectedValue = $(this).val();
            if(selectedValue === "kyllä"){
             $('textarea#teesi1').css('display','none');
            }else if(selectedValue === "ei"){
             $('textarea#teesi1').css('display','block');
            }
        })
        $('select#teesi2').change(function(){
            var selectedValue = $(this).val();
            if(selectedValue === "kyllä"){
             $('textarea#teesi2').css('display','none');
            }else if(selectedValue === "ei"){
